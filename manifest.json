{
  "manifest_version": 3,
  "name": "Custom New Tab with Google Tasks",
  "version": "2.0",
  "description": "Custom new tab page with Google Tasks integration",
  "chrome_url_overrides": {
    "newtab": "src/html/newtab.html"
  },
  "permissions": [
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "680113862255-dgl81d4oo6jgd8i42sobgogcvae3f688.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/tasks"
    ]
  },
  "icons": {
    "16": "assets/icons/icon.png",
    "48": "assets/icons/icon.png",
    "128": "assets/icons/icon.png"
  }
}
